---
import { Icon } from 'astro-icon/components'

type Props = {
	icon: string
	promo: string
}

const { icon, promo } = Astro.props
---

<div class="promo-item">
  <Icon name={icon} size={64} />
  <p>{promo}</p>
</div>

<style>
  .promo-item {
    display: flex;
    gap: 15px;
    justify-content: flex-start;
    align-items: center;
    width: 100%;
    padding: 15px;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 10px;
    backdrop-filter: blur(5px);

    & svg {
      width: 48px;
      height: 48px;
      flex-shrink: 0;
    }

    & p {
      font-weight: 700;
      font-size: 14px;
      line-height: 1.4;
      text-align: left;
    }
  }

  /* Tablet */
  @media (width >= 768px) {
    .promo-item {
      gap: 18px;
      padding: 20px;
      flex: 1;
      max-width: 360px;
      border-radius: 12px;
      
      & svg {
        width: 56px;
        height: 56px;
      }
      
      & p {
        font-size: 16px;
      }
    }
  }

  /* Desktop */
  @media (width >= 1024px) {
    .promo-item {
      padding: 24px;
      border-radius: 15px;
      
      & svg {
        width: 64px;
        height: 64px;
      }
      
      & p {
        font-size: 18px;
      }
    }
  }
</style>
