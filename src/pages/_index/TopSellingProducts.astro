---
import Button from '@components/ui/Button.astro'
import ProductCard from '@components/ui/ProductCard.astro'
import { wordpressService } from '../../services/wordpress'

// Obtener productos más vendidos de WordPress
let bestSellingProducts: any[] = []
try {
	bestSellingProducts = await wordpressService.getBestSellingProducts(8)
} catch (error) {
	console.error('Error loading best selling products:', error)
	// Productos fallback en caso de error
	bestSellingProducts = []
}
---

<section class="products-wrapper">
  <h2><span>Items más vendidos</span></h2>
  <div class="products-container">
    {bestSellingProducts.length > 0 ? (
      bestSellingProducts.map((product) => (
        <ProductCard 
          img={product.image} 
          category={product.category} 
          title={product.name} 
          price={product.onSale && product.salePrice ? `$${product.salePrice}` : `$${product.price}`}
        />
      ))
    ) : (
      // Productos fallback si no hay datos
      <ProductCard img="https://placehold.co/300" category="Categoría" title="Producto no disponible" price="$0" />
      <ProductCard img="https://placehold.co/300" category="Categoría" title="Producto no disponible" price="$0" />
      <ProductCard img="https://placehold.co/300" category="Categoría" title="Producto no disponible" price="$0" />
      <ProductCard img="https://placehold.co/300" category="Categoría" title="Producto no disponible" price="$0" />
    )}
  </div>
  <Button content="Ver más vendidos" href="/mas-vendidos" />
</section>

<style>
  .products-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;

    & h2 {
      text-transform: uppercase;
      text-align: center;
      padding: 40px 0;
      position: relative;
      width: 100%;

      & span {
        background-color: var(--primary-dark);
        padding: 0 20px;
      }

      &::before {
        content: '';
        position: absolute;
        height: 2px;
        width: 100%;
        background-color: var(--primary-light);
        opacity: 0.3;
        top: 50%;
        left: 0;
        z-index: -1;
      }
    }
    & .products-container {
      display: flex;
      gap: 20px;
      margin-bottom: 40px;
    }
  }
</style>
