---
import Button from '@components/ui/Button.astro';
import ProductCard from '@components/ui/ProductCard.astro';
---

<section class="products-wrapper">
  <h2><span>Items más vendidos</span></h2>
  <div class="products-container">
    <ProductCard img="https://placehold.co/300" category="Categoría" title="Nombre del producto" price="$9990" />
    <ProductCard img="https://placehold.co/300" category="Categoría" title="Nombre del producto" price="$9990" />
    <ProductCard img="https://placehold.co/300" category="Categoría" title="Nombre del producto" price="$9990" />
    <ProductCard img="https://placehold.co/300" category="Categoría" title="Nombre del producto" price="$9990" />
  </div>
  <Button content="Botoncito" href="#" />
</section>

<style>
  .products-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;

    & h2 {
      text-transform: uppercase;
      text-align: center;
      padding: 40px 0;
      position: relative;
      width: 100%;

      & span {
        background-color: var(--primary-dark);
        padding: 0 20px;
      }

      &::before {
        content: '';
        position: absolute;
        height: 2px;
        width: 100%;
        background-color: var(--primary-light);
        opacity: 0.3;
        top: 50%;
        left: 0;
        z-index: -1;
      }
    }
    & .products-container {
      display: flex;
      gap: 20px;
      margin-bottom: 40px;
    }
  }
</style>
